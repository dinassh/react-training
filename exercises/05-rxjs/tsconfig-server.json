{
  "compilerOptions": {
    "target": "esnext",
    "lib": [],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "baseUrl": "src",
    "strictFunctionTypes": true,
    "noUnusedLocals": true
  },
  "include": [
    "src"
  ]
}
